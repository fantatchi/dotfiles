{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(chezmoi:*)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)"
    ]
  },
  "model": "opus",
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"require(require('os').homedir()+'/.claude/scripts/run-hook.js')('obsidian-log-hook')\"",
            "timeout": 30,
            "statusMessage": "作業ログを自動記録中..."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"require(require('os').homedir()+'/.claude/scripts/run-hook.js')('context-save-hook')\"",
            "timeout": 30,
            "statusMessage": "コンテキストを自動保存中..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"require(require('os').homedir()+'/.claude/scripts/run-hook.js')('stop-hook')\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"require(require('os').homedir()+'/.claude/scripts/run-hook.js')('notification-hook')\""
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true,
    "document-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": true
}
