#------------------------------------------------------------------------------
# basic setting
#------------------------------------------------------------------------------
for file in $HOME/.zsh/(env|options|bindings).zsh; do
  source "$file"
done

#------------------------------------------------------------------------------
# oh-my-zsh setting
#------------------------------------------------------------------------------
source $HOME/.zsh/ohmy.zsh

#------------------------------------------------------------------------------
# local setting
#------------------------------------------------------------------------------
if [ -r "$HOME/.zshrc.local" ]; then
    source $HOME/.zshrc.local
fi
