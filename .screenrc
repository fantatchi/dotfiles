defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8
defc1 off

defscrollback 5000

autodetach on

# コマンドキーを Ctrl+T に変更
escape ^Tt 

# ビープを鳴らさない
vbell off 

# 起動時にでるメッセージを表示させない
startup_message off

hardstatus alwayslastline "%{= gk}[%m/%d %02c:%s] %{gW} %-w%{= wk}%n %t%{-}%+w %=%{gk}$USER@$HOSTNAME[$LANG] (%l) "

bind w windowlist -b 
windowlist title 'Num Title%=Flags'

termcapinfo xterm* ti@:te@

shell $SHELL

