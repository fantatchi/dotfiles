defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8
defc1 off

defscrollback 5000

autodetach on

# コマンドキーを Ctrl+T に変更
escape ^Tt

# ビープを鳴らさない
vbell off

# 起動時にでるメッセージを表示させない
startup_message off

hardstatus alwayslastline "%{= gk}[%m/%d %02c:%s] %{gW} %-w%{= wk}%n %t%{-}%+w %=%{gk}$USER@$HOSTNAME[$LANG] (%l) "

bind w windowlist -b
windowlist title 'Num Title%=Flags'

# attach 時の ウインドウリサイズを防ぐ
termcapinfo xterm-256color hs@:is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l

# 256 colors
defbce on
term xterm-256color

# for sh setting
setenv SCREEN true

shell $SHELL
